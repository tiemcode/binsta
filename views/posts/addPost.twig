{% extends "./layouts/app.twig" %}
{% block body %}

	<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
		<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
			<div class="bg-white px-4 py-8 shadow sm:rounded-lg sm:px-10">
				<p class="font-semibold text-xl">add post</p>
				<form class="space-y-6" method="POST">
					<div>
						<label for="email" class="block text-sm font-medium leading-6 text-gray-900">discription</label>
						<div class="mt-2">
							<textarea id="email" required name="title" type="text" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></textarea>
						</div>
					</div>
					<div>
						<label for="password" class="block text-sm font-medium leading-6 text-gray-900">snippet</label>
						<div class="mt-2">
							<textarea required id="password" cols="30" rows="11" name="snippet" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></textarea>
						</div>
					</div>
					<div>
						<label for="lang" class="block text-sm font-medium leading-6 text-gray-900">language</label>
						<select id="lang" name="lang" class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:text-sm sm:leading-6">
							{% for l in lang %}
								<option value="{{ l.language }}">{{ l.language   }}</option>
							{% endfor %}
						</select>
					</div>
					<div>
						<input type="submit" name="submit_post" value="post" class="flex w-full bg-bit-light-gray justify-center rounded-md bg- px-3 py-2 text-sm font-semibold text-white shadow-sm  focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2">
					</div>
				</form>

			</div>
		</div>
	</div>
{% endblock %}
