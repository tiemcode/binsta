{% extends "layouts/app.twig" %}

{% block body %}
{% if users %}
<div class="py-12 ">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="mx-auto max-w-2xl lg:mx-0">
            <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">users</h2>

        </div>
        <ul role="list"
            class="mx-auto mt-20 grid max-w-2xl grid-cols-2 gap-x-8 gap-y-16 text-center sm:grid-cols-3 md:grid-cols-4 lg:mx-0 lg:max-w-none lg:grid-cols-5 xl:grid-cols-6">
            {% for user in users %}
            <a href="../user/profile&id={{user.id}}">
                <li>
                    <img class="mx-auto h-24 w-24 rounded-full" src="../../public/media/{{user.profilepic}}" alt="">
                    <h3 class="mt-6 text-base font-semibold leading-7 tracking-tight text-gray-900">{{ user.username}}
                    </h3>

                </li>
            </a>
            {% endfor %}
            <!-- More people... -->
        </ul>
    </div>
</div>

{% else %}
<p>No users found.</p>
{% endif %}
</div>{% endblock %}